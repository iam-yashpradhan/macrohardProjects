<% include header%>
<div class="row">
        <h1 style="text-align: center">Update Information about your project here!!</h1>
        <div style="width: 50%; margin: 25px auto;">
			<form action="/projects/<%= proj._id %>?_method=PUT" method="POST">
				<div class="form-group">
			    <input class="form-control" type="text" name="Uproj[title]" value="<%=proj.title%>"/></div>
			    <div class="form-group">
			    <input class="form-control" type="text" name="Uproj[description]" value="<%=proj.description%>"/></div>
			    <div class="form-group">
			    <input class="form-control" type="number" name="Uproj[price]" value="<%= proj.price %>"/></div>
			    <div class="form-group">
			    <select name="Uproj[category]" class="form-control">
			        <option value=0>Software</option>
			        <option value=1>Hardware</option>
			    </select></div>
			    <button class="btn btn-lg btn-primary">Submit!</button>
			</form><br>
			<a href="/projects/<%=proj._id%>">Go back!</a>
		</div>
	</div>