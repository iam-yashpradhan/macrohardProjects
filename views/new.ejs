<% include header%>
<div class="row">
        <h1 style="text-align: center">Add Information about your project!</h1>
        <div style="width: 30%; margin: 25px auto;">
		<form action="/projects" method="POST">
			<div class="form-group">
		    <input class="form-control" type="text" name="title" placeholder="Title"/></div>
		    <div class="form-group">
		    <input class="form-control" type="text" name="description" placeholder="Description"/></div>
		    <div class="form-group">
		    <input class="form-control" type="number" name="price" placeholder="Enter price in rupees"/></div>
		    <div class="form-group">
		    <select name="category" class="form-control">
		        <option value=0>Software</option>
		        <option value=1>Hardware</option>
		    </select></div>
		    <button class="btn btn-lg btn-primary">Submit!</button>
		</form>
		<a href="/">Go back!</a><a href="">
		</div>
</div>
