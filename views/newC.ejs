<% include header%>
<div class="container">
    <div class="row">
        <h1 style="text-align: center">Make a new comment to "<%=project.title%>"</h1>
        <div style="width: 50%; margin: 25px auto;">
			<form action="/projects/<%= project._id %>/comments/" method="POST">
			<div class="form-group">
		    <input class="form-control" type="text" name="comment" placeholder="comment"/></div>
		    <button class="btn btn-lg">Submit!</button>
			</form>
		</div>
	</div>
</div>